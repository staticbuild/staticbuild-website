extends ./lib/jade/base.layout.jade
block content
  a(name='introduction')
  .jumbotron
    .container
      h1.text-center(style='margin: 0 auto; max-width: 900px'): small.
        A simple and easy to use #[strong static website] builder.
  .container
    p!= '&nbsp;'
    h4.text-center.
      Until this page has further content, please check out the 
      #[a(href='/api/') API] section or the 
      #[a(href='https://github.com/staticbuild/staticbuild/tree/master/demo') demo projects].
    p!= '&nbsp;'
    a(name='beta')
    p!= '&nbsp;'
    p.text-center
      a.bn.btn-primary.btn-lg(href=t('url.github') 
        role='button')!= 'GitHub &raquo;'
      br
      br
      em: strong (Project is currently in the beta.)
    p!= '&nbsp;'
  a(name='features')
  .jumbotron: .container
    h1 Features
    p
      | Here are some features...
    ul
      li Bundling of CSS and JS
      li Minification with source maps
      li LESS (SASS coming soon)
      li Jade and Nunjucks
      li Development Server
      li i18n
    p!= '&nbsp;'
    p.text-center
      a.bn.btn-primary.btn-lg(href=t('url.github') 
        role='button')!= 'GitHub &raquo;'
    p!= '&nbsp;'
